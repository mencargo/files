#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

export VISUAL=nano
export EDITOR=nano
export HISTCONTROL=erasedups

# Override defaults
alias ls='ls --color=auto'
alias df='df -h'
alias du='du -shc'
alias free='free -h'

alias l='ls -lhA'

# Warning, root server prompt!
PS1='\[\033[1;31m\][\u@\h \W]\[\033[0m\]\$ '
